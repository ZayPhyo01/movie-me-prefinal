<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="47dp"
    android:elevation="2dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/tab_root"

    android:orientation="horizontal"

    android:weightSum="3"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/root_1"
        android:clickable="true"
        android:background="@drawable/ripple"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/bar_color"
        android:id="@+id/now_view"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/now_select" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/root_2"
        android:clickable="true"
        android:background="@drawable/ripple"

        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="invisible"
            android:background="@color/bar_color"
            android:id="@+id/now_view1"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/root_3"
        android:clickable="true"
        android:background="@drawable/ripple"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:visibility="invisible"
            android:background="@color/bar_color"
            android:id="@+id/now_view2"
            />

        <ImageView
            android:layout_width="21dp"
            android:layout_height="23dp"
            android:src="@drawable/future"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</LinearLayout>

</android.support.v7.widget.CardView>